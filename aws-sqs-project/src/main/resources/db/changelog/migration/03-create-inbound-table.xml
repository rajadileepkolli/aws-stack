<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <changeSet id="createTable-inbound_log" author="rajakolli">

        <createSequence incrementBy="50"
                        sequenceName="inbound_log_seq" startValue="1"/>

        <createTable tableName="inbound_log">
            <column name="id" type="BIGINT" defaultValueSequenceNext="inbound_log_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="inbound_log_pkey"/>
            </column>
            <column name="message_id" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="received_json" type="JSONB">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="received_at" type="timestamptz"/>
            <column name="created_date" type="timestamptz"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
